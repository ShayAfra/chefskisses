<%- include('partials/header') -%>
  <div class="min-h-screen">
     

    
    <!--flex flex-col space-y-20 self-center -->
    <div class="grid grid-cols-3 grid-rows-3 gap-4 justify-center">
            <div>
            </div>
            <div class="place-self-end pr-40 mr-40">              
              <h1 class="text-xl">Add a Recipe</h1>
            </div>
            <div></div>
            <div></div>
                <form action="/post/createPost" enctype="multipart/form-data" method="POST">
                   <div class="form-control">
                        <label class="label" for="title">
                          <span class="label-text">Title</span>
                        </label>
                        <input type="text" placeholder="Please title your post" name="title" class="input input-bordered w-full max-w-xs" />
                      </div>
                      <div class="form-control">
                        <label class="label" for="description">
                          <span class="label-text">Description</span>
                        </label> 
                        <textarea class="textarea textarea-bordered h-24" placeholder="Please write a brief description of what your making" name="description"></textarea>
                      </div>
                      <div class="form-control">
                        <label class="label" for="ingredients">
                          <span class="label-text">Ingredients</span>
                        </label> 
                        <textarea class="textarea textarea-bordered h-24" placeholder="Please write your ingredients one line at a time" name="ingredients"></textarea>
                      </div>
                      <div class="form-control">
                        <label class="label" for="instructions">
                          <span class="label-text">Instructions</span>
                        </label> 
                        <textarea class="textarea textarea-bordered h-24" placeholder="Please write your instructions one line at a time" name="instructions"></textarea>
                      </div>
                      <div class="form-control">
                        <label for="imgUpload" class="form-control">Image</label>
                        <input type="file" class="form-control" id="imageUpload" name="file">
                      </div>
                      <div class="pt-5 place-self-end">                     
                        <button class="btn btn-primary" type="submit" value="Upload">Submit</button>
                      </div>
                </form>
     </div>
    
  </div>
<%- include('partials/footer') -%>




