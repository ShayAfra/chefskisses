                            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
                          </div>
                  
                          <div class="form-control">
                            <!-- <label class="label" for="password">
                              <span class="label-text">Password</span>
                            </label>
                            <input type="password" placeholder="password" name="password" id="password" class="input input-bordered" />
                             -->
                             <label for="password" class="form-label">Password</label>
                             <input type="password" class="form-control" id="password" name="password">
                          </div>
                  
                          <div class="form-control">
                            <!-- <label class="label" for="confirmPassword">
                              <span class="label-text">Password</span>
                            </label>
                            <input type="password" placeholder="Confirm Password" name="confirmPassword" id="confirmPassword" class="input input-bordered" /> -->
                            <label for="confirmPassword" class="form-label">Confirm Password</label>
                            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword">
                          </div>
                          <div class="form-control mt-6">
                            <button class="btn btn-primary" type="submit">Sign Up</button>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </form>
            </section>
    </main>

